{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"],
  "types": [
    "@types/node",
    "@types/express",
    "@types/mongoose",
    "@types/bcrypt",
    "@types/jsonwebtoken",
    "@types/passport",
    "@types/passport-local",
    "@types/passport-jwt",
    "@types/morgan"
  ]
}
